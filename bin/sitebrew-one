#!/usr/bin/env perl

use v5.14;
use FindBin;
use lib "$FindBin::Bin/lib";
use IO::All -utf8;

use Sitebrew;
use Sitebrew::Article;
use Sitebrew::Cmd::One;

-f $ARGV[0] or die <<USAGE;

sitebrew-one <path-to-markdown-file>

USAGE

my $cmd = Sitebrew::Cmd::One->new( markdown_file => $ARGV[0] );
$cmd->run;

say "BUILD " . $cmd->html_file;
